{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "lib/**/*",
    "lib/util/settings.schema.json"
  ],
  "exclude": [
    "node_modules"
  ]
}