{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "lib": ["es2018"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "rootDir": ".",
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "lib/**/*",
    "lib/util/settings.schema.json"
  ]
}